# Application Configuration
APP_NAME="AI Web Scraper"
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
# SECURITY: Use individual components instead of URL to avoid credential exposure
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webscraper
DB_USER=
DB_PASSWORD=
DB_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SECURITY NOTE: Avoid DATABASE_URL format in production as it may expose credentials in logs
# If you must use URL format, ensure it doesn't contain credentials:
# DATABASE_URL=postgresql://host:port/database

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_if_needed
# REDIS_URL=redis://:password@host:port/db

# AI Configuration
# SECURITY: Never commit real API keys to version control
# Get your API key from: https://makersuite.google.com/app/apikey
# Format: AIzaSy... (39 characters starting with AIza)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=8192
GEMINI_API_KEY_VALIDATION=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
# SECURITY: Generate a secure secret key with: openssl rand -hex 32
# Must be at least 32 characters with mixed case, numbers, and special chars
SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
RATE_LIMIT_PER_MINUTE=60

# Scraping Configuration
SCRAPER_MAX_CONCURRENT_JOBS=10
SCRAPER_DEFAULT_TIMEOUT=30
SCRAPER_MAX_RETRIES=3

# SECURITY: Use generic user agents to avoid fingerprinting
# Avoid system-specific information (Windows versions, Mac versions, etc.)
SCRAPER_USER_AGENTS="Mozilla/5.0 (compatible; WebScraper/1.0)|Mozilla/5.0 (compatible; DataCollector/1.0)|Mozilla/5.0 (compatible; ContentAnalyzer/1.0)"
SCRAPER_USER_AGENT_ROTATION=true
SCRAPER_RANDOMIZE_USER_AGENTS=true

# Proxy Configuration (Optional)
# SECURITY: Use separate fields instead of URL with embedded credentials
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_PROTOCOL=http
SCRAPER_PROXY_ROTATION_ENABLED=false

# Security Settings
SCRAPER_RESPECT_ROBOTS_TXT=true
SCRAPER_VALIDATE_SSL=true
SCRAPER_MAX_REDIRECTS=5

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Metrics Configuration
METRICS_DISK_PATH=/  # Linux/Mac: /, Windows: C:
METRICS_COLLECTION_INTERVAL=30
METRICS_HISTORY_SIZE=1000